{
  "name": "game-schedule-monorepo",
  "version": "1.0.0",
  "description": "Game events calendar monorepo with frontend and backend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:frontend": "pnpm --filter @game-calendar/web-frontend dev",
    "dev:backend": "pnpm --filter @game-calendar/cloudflare-backend start",
    "build": "pnpm run --recursive build",
    "build:frontend": "pnpm --filter @game-calendar/web-frontend build",
    "build:backend": "pnpm --filter @game-calendar/cloudflare-backend deploy",
    "lint": "pnpm run --recursive lint",
    "test": "pnpm run --recursive test",
    "clean": "pnpm run --recursive clean",
    "type-check": "pnpm run --recursive type-check"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
