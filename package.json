{
  "name": "game-schedule-monorepo",
  "version": "1.0.0",
  "description": "Game events calendar monorepo with frontend and backend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:frontend": "turbo run @game-calendar/web-frontend#dev",
    "dev:backend": "turbo run @game-calendar/cloudflare-backend#start",
    "build": "turbo run build",
    "build:frontend": "turbo run @game-calendar/web-frontend#build",
    "build:backend": "turbo run @game-calendar/cloudflare-backend#deploy",
    "lint": "turbo run dev lint",
    "test": "turbo run dev test",
    "clean": "turbo run dev clean",
    "type-check": "turbo run dev type-check"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "turbo": "^2.5.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
